{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/config-typescript/nestjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["src/*"],
      "@talimy/shared": ["../../packages/shared/src/index"],
      "@talimy/shared/*": ["../../packages/shared/src/*"],
      "@talimy/database": ["../../packages/database/src/index"],
      "@talimy/database/*": ["../../packages/database/src/*"],
      "@talimy/trpc": ["../../packages/trpc/src/index"],
      "@talimy/trpc/*": ["../../packages/trpc/src/*"],
      "dotenv": ["../../packages/database/node_modules/dotenv/lib/main.d.ts"],
      "pg": ["../../packages/database/node_modules/@types/pg/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
